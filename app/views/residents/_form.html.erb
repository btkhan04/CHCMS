<%= form_with(model: resident, local: true) do |form| %>
  <% if resident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resident.errors.count, "error") %> prohibited this resident from being saved:</h2>

      <ul>
      <% resident.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_area :first_name, id: :resident_first_name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_area :last_name, id: :last_name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :next_of_kin %>
    <%= form.text_area :next_of_kin, class: "form-control", id: :resident_next_of_kin %>
  </div>

    <div class="field">
      <%= form.label :dob %><br />
      <%= form.date_select :dob, start_year: 100.years.ago.year, end_year: Date.today.year, default: Date.today, class: "form-control" %>
    </div>
    <div class="field">
      <%= form.label :sex %><br />
      <%= form.text_field :sex, class: "form-control" %>
    </div>
    
   <div class="field">
    <%= form.label :medical_condition %>
    <%= form.select(:medical_conditions, Medical.all.collect {|p| [ p.name, p.name ] }, {include_blank: false}, class: 'form-contol') %>
  </div>

    <%= form.submit "Create Resident", class: 'btn btn-primary form-contol' %>
<% end %>
