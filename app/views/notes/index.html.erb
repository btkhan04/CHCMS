<p id="notice"><%= notice %></p>

<h1>Residents Daily Notes</h1>

<%= button_to "Add new note", new_note_path, class: 'btn btn-primary' ,:method => :get  %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Resident</th>
      <th>Description</th>
      <th>Food intake</th>
      <th>Fluid intake</th>
      <th>Medicine</th>
      <th>Created By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.name %></td>
        <td><%= note.description %></td>
        <td><%= note.food_intake %></td>
        <td><%= note.fluid_intake %></td>
        <td><%= note.medicine %></td>
        <td><%= note.user.name %></td>
        <td><%= link_to 'Show', note,  class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_note_path(note),  class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', note,  class: 'btn btn-danger',  method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

