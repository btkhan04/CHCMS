<p id="notice"><%= notice %></p>

<h1>Residents Daily Notes</h1>

<%= link_to 'New Note', new_note_path %>

<br>
<br>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Food intake</th>
      <th>Fluid intake</th>
      <th>Medicine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.name %></td>
        <td><%= note.description %></td>
        <td><%= note.food_intake %></td>
        <td><%= note.fluid_intake %></td>
        <td><%= note.medicine %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>